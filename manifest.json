{
   "manifest_version": 2,
   
   "name": "put.io",
   "description": "Easily download links with put.io",
   "version": "0.1.3",

   "permissions": [ "http://*/", "https://*/", "tabs", "contextMenus"],
   "browser_action": {
      "default_icon": "icon.png"
   },
   "icons": { 
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
   },
   "background": {
      "scripts": ["background.js"]
   }
}
