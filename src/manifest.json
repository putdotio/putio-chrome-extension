{
  "manifest_version": 2,
  "name": "__MSG_extensionName__",
  "description": "__MSG_extensionDescription__",
  "version": "2.1.0",
  "default_locale": "en",
  "applications": {
    "gecko": {
      "id": "devs@put.io"
    }
  },
  "homepage_url": "https://github.com/putdotio/putio-webextension",
  "permissions": [
    "contextMenus",
    "identity",
    "storage",
    "notifications"
  ],
  "browser_action": {
    "default_icon": "icon.png"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "scripts": [
      "browser-polyfill.js",
      "background.js"
    ]
  }
}

